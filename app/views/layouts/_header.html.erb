    <!-- Right Nav Section -->
    <ul class="right">

      <%# User info if applicable %>
      <% if user_signed_in? %>
        <li><a href="#">Signed in as <span class="user-email"><%= current_user.email %></span></a></li>
        
        <li class="divider hide-for-small"></li>
        <li class="has-dropdown"><a href="#">Account</a>
          <ul class="dropdown">
            <li class="divider"></li>
