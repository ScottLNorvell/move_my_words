<% provide :title, current_user == @user ? "Home" : @user.name || @user.email %>

<div class="row">
	<div class="large-3 columns">
		<%= gravatar_for @user, size: 300 %>
		<h3 class="user-name"><%= name_or_email @user %></h3>
		<h5 class="subheader">Blogs about ___ and ___.</h5>
		<p><strong>ABOUT</strong>: <span class="user-bio"><%= @user.bio || "-no-bio-yet-" %></span></p>

	</div>
	<div class="large-9 columns">
		<%= render partial: 'shared/word_block', locals: { editable: user_signed_in? } %>
	</div>
</div>
<hr>
<% if @user_move_my_posts.any? %>
<div class="row" >
	<div class="large-12 columns" id="move-my-post-list" >
		<%= render @user_move_my_posts %>
	</div>
</div>
<% else %>
<div class="row" >
	<div class="large-12 columns" id="move-my-post-list">
		<h4>No Posts!</h4>
	</div>
</div>
<% end %>


